log4j.rootLogger=ALL,stdout,archivo
log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d{ABSOLUTE} %30.30c %5.5p %m%n
log4j.appender.stdout.target=System.out
log4j.appender.stdout.Threshold=ON
log4j.logger.org.hibernate=ON
log4j.appender.archivo=org.apache.log4j.RollingFileAppender
log4j.appender.archivo.File=/tmp/admon.log
log4j.appender.archivo.MaxFileSize=4096KB
log4j.appender.archivo.MaxBackupIndex=10
log4j.appender.archivo.DatePattern='.' yyyy'.txt'
log4j.appender.archivo.Append=true
log4j.appender.archivo.layout=org.apache.log4j.PatternLayout
log4j.appender.archivo.layout.ConversionPattern=%d %p [%c] - %m%n
log4j.appender.archivo.Threshold=WARN

